<% layout('layout/boilerplate') -%>
<form action="/readings" method="POST" novalidate class="validate-form mb-5">
    <div class="mb-3">
        <label for="title" class="form-label">Give your text a title.</label>
        <input type="text" name="reading[title]" id="title" placeholder="A fictional story of how the dinosaurs disappeared..." class="form-control" required>
        <div id="titleHelpBlock" class="form-text">
          This will be displayed as the name of the text on your profile and the home screen.
        </div>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose a title.
          </div>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Give a description of what the text will be about.</label>
      <textarea class="form-control" name="reading[description]" id="description" placeholder="A dinosaur that is not scary has to save his family from extinction..." required></textarea>
      <div id="titleHelpBlock" class="form-text">
        This will help tell us what you want to happen in the story. Include things like general plot, if there is a moral, what type of text this should be, etc.
      </div>
    </div>

    <div class="mb-3">
        <label for="age" class="form-label">What level are your students?</label>
        <select id="age" name="reading[age]" class="form-select"aria-label="Age of student" required>
            <option value="" selected disabled>Choose an age bracket...</option>
            <option value="Kindergarten">Kindergarten</option>
            <option value="Middle School">Middle School</option>
            <option value="High School">High School</option>
            <option value="Adult">Adult</option>
            <option value="Business">Business / Professional</option>
        </select>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose an age.
          </div>
    </div>

    <div class="mb-3">
        <label for="level" class="form-label">What level are your students?</label>
        <select id="level" name="reading[level]" class="form-select"aria-label="Level of student" required>
            <option value="" selected disabled>Choose a level...</option>
            <option value="A1">A1</option>
            <option value="A2">A2</option>
            <option value="B1">B1</option>
            <option value="B2">B2</option>
            <option value="C1">C1</option>
            <option value="C2">C2</option>
        </select>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose a level.
          </div>
    </div>

    <div class="mb-3">
        <label for="language" class="form-label">What language should the text be written in?</label>
        <select name="reading[language]" id="language" class="form-select" required>
            <%- include ('../partials/languages.ejs') %>
        </select>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose a language.
          </div>
    </div>

    <div class="mb-3">
      <label for="words" class="form-label">How many words should the text be?</label>
      <input type="text" name="reading[words]" id="words" class="form-control" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Please tell us how long the text should be.
      </div>
    </div>

    <button class="btn btn-danger w-100">Submit</button>
</form>

<script src="/javascripts/validateForms.js"></script>
