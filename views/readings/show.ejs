<% layout('layout/boilerplate') -%>
<a href="/readings"><-- Back</a>
<div class="row">
  <section id="readingText" class="col mt-3">
    <h1><%= reading.title %></h1>
    <div class="metaInfo">
      <p class="text-muted">
        Level: <%= reading.level %> | Age: <%= reading.age %> | Created on: <%= reading.date %>
      </p>
      <form action="/readings/<%=reading._id%>?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn-danger">Delete Text</button>
      </form>     
      <a href="/readings/<%=reading._id%>/edit" class="btn btn-success">Edit Text</a> 
    </div>
    <div class="d-flex my-5 flex-column">
        <% for (let i = 0; i<body.length; i++) { %>
          <p class="lead pe-5"><%= body[i]%></p>
        <% } %>
      <img src="<%= reading.image %>" alt="Feature image of the story." class="w-50 h-30 mt-5 mx-auto">
    </div>
  </section>     
</div>